{% extends 'backoffice/components/wrapper.html.twig' %}

{% block title %}Создать категорию{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="py-4 w-50">
                <form method="post">
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Название</label>
                        <input
                            type="text"
                            {% if name is defined %}value="{{ name }}"{% endif%}
                            name="name"
                            id="inputName"
                            class="form-control"
                            required
                            autofocus
                        />
                    </div>

                    <button class="btn btn-primary" type="submit">Создать</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
